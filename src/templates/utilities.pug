  function getRandomInt(min /*: number */, max /*: number */) /*: number */ {
    const randomInt = Math.floor(Math.random() * (max - min)) + min;

    return randomInt;
  }

  function getRandomId(length /*: number */ = 20) /*: string */ {
    const chars = '0123456789abcdefghijklmnopqrstuvwxyz';
    const randomId = Array.from(
      { length },
      () => chars[getRandomInt(0, chars.length - 1)]
    ).join('');

    return randomId;
  }

  function getRandomDoubleId(length /*: number */ = 20) /*: string */ {
    function* generator(
      characters /*: number */
    ) /*: Generator<string, void, void> */ {
      while (true) {
        const randomId = getRandomId(characters);

        yield randomId;
        yield randomId;
      }
    }

    if (getRandomDoubleId.generator === undefined) {
      getRandomDoubleId.generator = generator(length);
    }

    return getRandomDoubleId.generator.next().value;
  }
